<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgViewFront"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewLocation"
        android:text="Location Name"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/imgViewFront"
        android:textAlignment="center"
        android:layout_alignRight="@+id/imgViewFront"
        android:layout_alignEnd="@+id/imgViewFront"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewCity"
        android:text="City Name"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/txtViewLocation"
        android:textAlignment="center"
        android:layout_alignRight="@+id/txtViewLocation"
        android:layout_alignEnd="@+id/txtViewLocation"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewInspector"
        android:text="Inspector Name"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/txtViewCity"
        android:textAlignment="center"

        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewDOI"
        android:text="Date of Inspection"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/txtViewInspector"
        android:textAlignment="center"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewHN"
        android:text="House Name"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:layout_below="@+id/txtViewDOI"
        android:textAlignment="center"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

</RelativeLayout>